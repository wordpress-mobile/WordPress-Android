<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Not Pressed -->
            <item android:state_checked="false" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/stats_visitors_and_views_button_latest_blue_light" />
            <item android:state_checked="true"  android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/stats_visitors_and_views_button_latest_white" />

            <!-- Pressed -->
            <item android:state_checked="false" android:state_pressed="true" android:drawable="@drawable/stats_visitors_and_views_button_blue_light" />
            <item android:state_checked="true"  android:state_pressed="true" android:drawable="@drawable/stats_visitors_and_views_button_white" />

        </selector>
    </item>
</ripple>