<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_icon"
        android:alpha="@dimen/material_emphasis_disabled"
        android:layout_width="@dimen/bottom_nav_bar_icon_size"
        android:layout_height="@dimen/bottom_nav_bar_icon_size"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        app:tint="@drawable/nav_bar_button_selector"
        tools:src="@drawable/ic_create_white_24dp" />

    <View
        android:id="@+id/nav_badge"
        android:layout_width="@dimen/bottom_nav_bar_badge_size"
        android:layout_height="@dimen/bottom_nav_bar_badge_size"
        android:layout_gravity="top"
        android:background="@drawable/bg_nav_badge"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
