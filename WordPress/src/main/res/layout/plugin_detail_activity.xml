<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <RelativeLayout
        style="@style/PluginStateContainer">

        <TextView
            style="@style/PluginStateTitle"
            android:text="@string/plugin_detail_label_state_active"/>

        <Switch
            android:id="@+id/plugin_state_active"
            style="@style/PluginStateSwitch"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/PluginStateContainer">

        <TextView
            style="@style/PluginStateTitle"
            android:text="@string/plugin_detail_label_state_autoupdates"/>

        <Switch
            android:id="@+id/plugin_state_autoupdates"
            style="@style/PluginStateSwitch"/>
    </RelativeLayout>

</LinearLayout>