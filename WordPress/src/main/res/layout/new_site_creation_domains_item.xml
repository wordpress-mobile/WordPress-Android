<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/white"
                                             android:foreground="?selectableItemBackground"
                                             android:minHeight="@dimen/one_line_list_item_height"
                                             android:paddingStart="@dimen/margin_large"
                                             tools:ignore="RtlSymmetry">

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/domain_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_extra_large"
        android:paddingStart="@dimen/new_site_creation_domains_radio_button_padding_start"
        android:paddingTop="@dimen/margin_medium"
        android:textAlignment="viewStart"
        android:textColor="@color/wp_grey_dark"
        android:textSize="@dimen/text_sz_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:layout_marginStart="@dimen/new_site_creation_domains_divider_padding_start"
        android:background="@color/wp_grey_lighten_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
