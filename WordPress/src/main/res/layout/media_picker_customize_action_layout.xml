<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/min_touch_target_sz"
    android:layout_height="@dimen/min_touch_target_sz"
    android:background="?android:attr/actionBarItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/customize_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_customize_white_24dp"
        android:tint="?attr/wpColorActionModeIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/customize_icon_count"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/media_picker_action_mode_dot"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/bg_oval_secondary_stroke_on_surface"
        android:ellipsize="end"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_sz_extra_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9" />


</androidx.constraintlayout.widget.ConstraintLayout>
