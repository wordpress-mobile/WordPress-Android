<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/purple_circle"
        android:layout_width="@dimen/login_prologue_background_circle_size"
        android:layout_height="@dimen/login_prologue_background_circle_size"
        android:src="@drawable/bg_oval_translucent_stroke_3dp"
        android:tint="@color/login_prologue_background_circle_light_purple"
        app:layout_constraintBottom_toBottomOf="@id/guideline_purple_circle_bottom"
        app:layout_constraintEnd_toEndOf="@+id/guideline_purple_circle_end"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_purple_circle_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_purple_circle_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <ImageView
        android:id="@+id/blue_circle"
        android:layout_width="@dimen/login_prologue_background_circle_size"
        android:layout_height="@dimen/login_prologue_background_circle_size"
        android:src="@drawable/bg_oval_translucent_stroke_3dp"
        android:tint="@color/login_prologue_background_circle_blue"
        app:layout_constraintEnd_toEndOf="@+id/guideline_blue_circle_end"
        app:layout_constraintTop_toTopOf="@id/guideline_blue_circle_top"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_blue_circle_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="130dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_blue_circle_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="60dp" />

    <ImageView
        android:id="@+id/green_circle"
        android:layout_width="@dimen/login_prologue_background_circle_size_large"
        android:layout_height="@dimen/login_prologue_background_circle_size_large"
        android:src="@drawable/bg_oval_translucent_stroke_3dp"
        android:tint="@color/login_prologue_background_circle_green"
        app:layout_constraintStart_toStartOf="@+id/guideline_green_circle_start"
        app:layout_constraintTop_toTopOf="@id/guideline_green_circle_top"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_green_circle_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_green_circle_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
