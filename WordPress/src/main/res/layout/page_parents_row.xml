<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hierarchy_row_height"
        android:orientation="horizontal"
        android:background="@drawable/page_parents_selector"
        android:id="@+id/hierarchyRow" android:clickable="false">
    <ImageView android:layout_width="@dimen/hierarchy_row_height"
               android:layout_height="@dimen/hierarchy_row_height"
               android:src="@drawable/ic_level_indicator"
               android:id="@+id/hierarchyRowLevelIndicator" android:scaleType="fitEnd"/>
    <TextView
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_vertical"
            android:textColor="#464646"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:id="@+id/hierarchyRowText"/>
</LinearLayout>