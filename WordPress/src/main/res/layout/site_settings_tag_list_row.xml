<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <TextView
        android:id="@+id/text_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:minHeight="@dimen/min_touch_target_sz"
        android:padding="@dimen/margin_extra_large"
        android:textColor="?attr/wpColorText"
        android:textSize="@dimen/text_sz_large"
        tools:text="text_tag"
        android:textAlignment="viewStart"
        android:layout_toStartOf="@+id/text_count"/>

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/tag_list_circle"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_medium"
        android:textColor="@color/primary_40"
        android:textSize="@dimen/text_sz_small"
        tools:text="5"
        android:layout_marginEnd="10dp"
        android:paddingEnd="@dimen/margin_large"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/margin_large"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/neutral_10" />

</RelativeLayout>
