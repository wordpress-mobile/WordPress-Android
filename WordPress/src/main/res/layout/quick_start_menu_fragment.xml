<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include
        layout="@layout/bottom_sheet_handle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/pin_action"
        style="@style/MainBottomSheetRowLayout"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            style="@style/MainBottomSheetRowIcon"
            android:contentDescription="@null"
            android:visibility="visible"
            android:src="@drawable/ic_push_pin_24" />

        <TextView
            style="@style/MainBottomSheetRowTextView"
            android:id="@+id/quick_start_pin_text"
            android:gravity="start"
            android:text="@string/quick_start_card_menu_pin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hide_action"
        style="@style/MainBottomSheetRowLayout"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            style="@style/MainBottomSheetRowIcon"
            android:contentDescription="@null"
            android:visibility="visible"
            android:src="@drawable/ic_visibility_off_24" />

        <TextView
            style="@style/MainBottomSheetRowTextView"
            android:gravity="start"
            android:text="@string/quick_start_card_menu_hide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remove_action"
        style="@style/MainBottomSheetRowLayout"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            style="@style/MainBottomSheetRowIcon"
            android:contentDescription="@null"
            android:visibility="visible"
            android:src="@drawable/ic_close_24px" />

        <TextView
            style="@style/MainBottomSheetRowTextView"
            android:gravity="start"
            android:text="@string/quick_start_card_menu_remove" />
    </LinearLayout>
</LinearLayout>
