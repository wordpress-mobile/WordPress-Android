<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/fab_add_dotorg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:visibility="gone"
        fab:fab_colorNormal="@color/white"
        fab:fab_colorPressed="@color/grey_light"
        fab:fab_plusIconColor="@color/blue_medium" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/grey_light"
        fab:fab_addButtonPlusIconColor="@color/blue_medium"
        fab:fab_labelStyle="@style/fab_menu_label_style"
        fab:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/fab_item_create_dotcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/grey_lighten_20"
            fab:fab_colorPressed="@color/grey"
            fab:fab_plusIconColor="@color/grey_darken_20"
            fab:fab_size="mini"
            fab:fab_title="@string/site_picker_create_dotcom" />

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/fab_item_add_dotorg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/grey_lighten_20"
            fab:fab_colorPressed="@color/grey"
            fab:fab_plusIconColor="@color/grey_darken_20"
            fab:fab_size="mini"
            fab:fab_title="@string/site_picker_add_self_hosted" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>