<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.LoginFlow.Prologue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_large"
    android:paddingEnd="@dimen/margin_extra_large"
    android:paddingStart="@dimen/margin_extra_large"
    android:paddingTop="@dimen/margin_large">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_with_wpcom_button"
        style="@style/Widget.LoginFlow.Button.Primary.Prologue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_small"
        android:text="@string/continue_with_wpcom" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enter_your_site_address_button"
        style="@style/Widget.LoginFlow.Button.Secondary.Prologue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:text="@string/enter_your_site_address" />
</LinearLayout>
