<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/StatsWidgetListItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stats_widget_list_item_height">

    <TextView
        android:id="@+id/period"
        style="@style/StatsWidgetKey.Dark"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:text="Today"/>

    <TextView
        android:id="@+id/neutral_change"
        style="@style/StatsChange.NeutralDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="+25(1%)"/>

    <TextView
        android:id="@+id/positive_change"
        style="@style/StatsChange.PositiveDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="+25(1%)"/>

    <TextView
        android:id="@+id/negative_change"
        style="@style/StatsChange.NegativeDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="-25(1%)"/>

    <TextView
        android:id="@+id/value"
        style="@style/StatsWidgetValue.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        tools:text="+15,908"/>
</LinearLayout>
