<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/login_prologue_content_area"
    android:layout_height="@dimen/login_prologue_content_area"
    android:layout_gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_one"
        style="@style/Widget.LoginFlow.Prologue.CircularButton.Small"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/celadon_30"
        app:icon="@drawable/ic_pages_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_two"
        style="@style/Widget.LoginFlow.Prologue.CircularButton.Medium"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="52dp"
        android:backgroundTint="@color/orange_30"
        app:icon="@drawable/ic_customize_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_one"
        app:layout_constraintStart_toStartOf="@+id/image_one" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_three"
        style="@style/Widget.LoginFlow.Prologue.CircularButton.Large"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="@color/pink_40"
        app:icon="@drawable/ic_create_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_one"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="64dp"
        android:layout_height="152dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_one" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_two"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/image_one"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_two" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_three"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="64dp"
        android:layout_height="152dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/image_two"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_three" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_four"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="48dp"
        android:layout_height="96dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/image_one"
        app:layout_constraintTop_toBottomOf="@+id/image_one">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_four" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_five"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="40dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/image_four"
        app:layout_constraintTop_toBottomOf="@+id/image_one">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_five" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_six"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="40dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_five"
        app:layout_constraintTop_toTopOf="@+id/image_five">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_six" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_seven"
        style="@style/Widget.LoginFlow.Prologue.Card.ImageOnly"
        android:layout_width="64dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_six"
        app:layout_constraintTop_toBottomOf="@+id/image_three">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/login_prologue_first_asset_seven" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
