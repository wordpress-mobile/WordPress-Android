<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/suggestion_list_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin_large"
    android:background="?attr/colorSurface">

    <ImageView
        android:id="@+id/suggest_list_row_avatar"
        android:layout_width="@dimen/avatar_sz_small"
        android:layout_height="@dimen/avatar_sz_small"
        android:gravity="center_vertical"
        android:contentDescription="@null"/>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/suggestion_list_row_raw_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="raw_value"
        android:layout_marginStart="@dimen/margin_medium"/>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/suggestion_list_row_display_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:textColor="@color/neutral_30"
        android:textSize="@dimen/text_sz_medium"
        tools:text="display_value"
        android:layout_marginStart="@dimen/margin_medium"/>

</LinearLayout>
