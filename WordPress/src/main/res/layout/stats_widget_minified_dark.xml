<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stats_minified_widget_height"
    android:background="@drawable/bg_rectangle_gray_800_radius_4dp"
    android:gravity="center_vertical"
    android:id="@+id/widget_container"
    android:minWidth="118dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_site_icon"
        style="@style/StatsMinifiedWidgetSiteIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/stats_minified_widget_height"
        android:contentDescription="@string/my_site_icon_content_description"
        android:src="@drawable/ic_placeholder_blavatar_grey_lighten_20_40dp"/>

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/StatsMinifiedWidgetKey.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/stats_views"/>

        <TextView
            android:id="@+id/value"
            style="@style/StatsWidgetValue.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="15,908"/>

    </LinearLayout>

    <TextView
        android:id="@+id/widget_retry_button"
        style="@style/StatsWidgetRetryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="@string/retry"/>
</LinearLayout>
