<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Icon -->
    <style name="Jetpack.Icon" parent="">
        <item name="android:layout_width">@dimen/jetpack_icon_size</item>
        <item name="android:layout_height">@dimen/jetpack_icon_size</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <!-- TextViews -->
    <style name="Jetpack.TextView" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Jetpack.Header" parent="Jetpack.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="Jetpack.SecondaryHeader" parent="Jetpack.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Jetpack.Description" parent="Jetpack.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_large</item>
    </style>

    <style name="Jetpack.PrimaryButton" parent="WordPress.Button.Primary">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="Jetpack.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.SecondaryButton.OnSurface</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="ThemeOverlay.SecondaryButton.OnSurface" parent="">
        <item name="colorPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="Jetpack.ListItem.Label" parent="Jetpack.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Jetpack.ListItem.Progress.Label" parent="Jetpack.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="Jetpack.ListItem.Progress.Label.Info" parent="Jetpack.ListItem.Progress.Label">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <!-- Backup Styles -->
    <style name="Jetpack.Backup.ListItem.Footnote" parent="Jetpack.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>
