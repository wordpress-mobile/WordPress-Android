<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextViews -->
    <style name="BackupTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="Backup.Details.Header" parent="BackupTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Backup.Details.SecondaryHeader" parent="BackupTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Backup.Details.Description" parent="BackupTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="Backup.Details.PrimaryButton" parent="WordPress.Button.Primary">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_large</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>
</resources>
