<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextViews -->

    <style name="JetpackConnectionText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_marginTop">@dimen/margin_extra_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_large</item>
    </style>

    <style name="JetpackConnectionButton" parent="WordPress.Button.Primary">
        <item name="android:paddingEnd">@dimen/margin_extra_medium_large</item>
        <item name="android:paddingStart">@dimen/margin_extra_medium_large</item>
    </style>

    <style name="JetpackInstallTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginTop">@dimen/margin_extra_large</item>
    </style>

    <style name="JetpackInstallMessageText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_extra_large</item>
    </style>

    <style name="JetpackFaqButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginBottom">@dimen/margin_extra_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="JetpackTermsAndConditionsButton">
        <item name="android:autoLink">all</item>
        <item name="android:linksClickable">false</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!-- Stats Refresh -->

    <style name="StatsBlock" />

    <style name="StatsLoadingBlock" parent="StatsBlock">
        <item name="android:minHeight">96dp</item>
    </style>

    <style name="StatsBlockLine">
        <item name="android:layout_height">@dimen/one_line_list_item_height</item>
        <item name="android:paddingStart">@dimen/margin_extra_large</item>
    </style>

    <style name="StatsBlockTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatsDateTimeZone" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <style name="StatsBlockBigTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_sz_extra_large</item>
    </style>

    <style name="StatsBlockItem" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="StatsBlockValue" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="StatsBlockEmpty" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <style name="StatsBlockText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="StatsBlockLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <style name="StatsBlockLink" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="StatsBlockColumnSmallHeader" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/stats_block_column</item>
    </style>

    <style name="StatsBlockColumnSmallValue" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/stats_block_column</item>
        <item name="android:textSize">@dimen/text_sz_larger</item>
    </style>

    <style name="StatsGraphLabel" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="StatsBlockBigValue" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:layout_marginEnd">@dimen/margin_key</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="StatsBlockBigValueUnit" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="StatsBlockPostingActivityLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="StatsBlockPostingActivityLegend" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="StatsLegend" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_large</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/bg_stats_visitors_legend</item>
    </style>

    <style name="StatsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StatsInsightManagementList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatsActivityBox">
        <item name="android:layout_width">@dimen/stats_activity_box_size</item>
        <item name="android:layout_height">@dimen/stats_activity_box_size</item>
        <item name="android:layout_marginStart">@dimen/stats_activity_box_end_margin</item>
    </style>

    <style name="StatsReferredItemLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_marginTop">@dimen/margin_extra_large</item>
    </style>

    <style name="StatsReferredItemTitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatsBlockQuickScanLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="StatsBlockQuickScanValue" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StatsTag" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:backgroundTint">?attr/colorError</item>
    </style>

    <style name="StatsMapLegend" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Stats Widget -->

    <style name="StatsWidgetConfigureTitle">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="StatsWidgetConfigureValue">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <style name="StatsWidgetSiteIcon">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="StatsMinifiedWidgetSiteIcon">
        <item name="android:paddingBottom">17dp</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:paddingTop">17dp</item>
    </style>

    <style name="StatsWidgetHeader">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="StatsWidgetHeader.Light">
        <item name="android:background">@drawable/bg_rectangle_gray_0_top_radius_4dp</item>
    </style>

    <style name="StatsWidgetHeader.Dark">
        <item name="android:background">@drawable/bg_rectangle_gray_700_top_radius_4dp</item>
    </style>

    <style name="StatsWidgetTitle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>

    <style name="StatsWidgetTitle.Light">
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="StatsWidgetTitle.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatsWidgetErrorMessage" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="StatsWidgetErrorMessage.Light">
        <item name="android:textColor">@color/gray_50</item>
    </style>

    <style name="StatsWidgetErrorMessage.Dark">
        <item name="android:textColor">@color/gray_20</item>
    </style>

    <style name="StatsWidgetRetryButton" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textColor">@color/wp_blue_medium</item>
    </style>

    <style name="StatsWidgetListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_extra_large</item>
        <item name="android:paddingStart">@dimen/margin_extra_large</item>
    </style>

    <style name="StatsWidgetKey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_large</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StatsWidgetKey.Light">
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="StatsWidgetKey.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatsMinifiedWidgetKey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StatsMinifiedWidgetKey.Light">
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="StatsMinifiedWidgetKey.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatsWidgetValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="StatsWidgetValue.Light">
        <item name="android:textColor">@color/gray_50</item>
    </style>

    <style name="StatsWidgetValue.Dark">
        <item name="android:textColor">@color/gray_20</item>
    </style>

    <style name="StatsChange" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginEnd">19dp</item>
    </style>

    <style name="StatsChange.NeutralLight" parent="StatsChange">
        <item name="android:textColor">@color/gray_50</item>
    </style>

    <style name="StatsChange.NeutralDark" parent="StatsChange">
        <item name="android:textColor">@color/gray_20</item>
    </style>

    <style name="StatsChange.PositiveLight" parent="StatsChange">
        <item name="android:textColor">@color/green_5</item>
    </style>

    <style name="StatsChange.PositiveDark" parent="StatsChange">
        <item name="android:textColor">@color/green_30</item>
    </style>

    <style name="StatsChange.NegativeLight" parent="StatsChange">
        <item name="android:textColor">@color/red_50</item>
    </style>

    <style name="StatsChange.NegativeDark" parent="StatsChange">
        <item name="android:textColor">@color/red_40</item>
    </style>

    <style name="StatsWidgetBlockKey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_small</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="StatsWidgetBlockKey.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatsWidgetBlockKey.Light">
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="StatsWidgetBlockValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_sz_extra_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="StatsWidgetBlockValue.Dark">
        <item name="android:textColor">@color/gray_20</item>
    </style>

    <style name="StatsWidgetBlockValue.Light">
        <item name="android:textColor">@color/gray_50</item>
    </style>

    <style name="InsightsManagementHeader" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="InsightsManagementItem" parent="TextAppearance.MaterialComponents.Body1" />
</resources>
