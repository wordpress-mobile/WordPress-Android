<?xml version="1.0" encoding="utf-8"?>

<!--
    selector for when the background shouldn't change unless the view is pressed/selected
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/blue_extra_light" android:state_pressed="true" />
    <item android:drawable="@color/blue_extra_light" android:state_selected="true" />

</selector>