<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/stats_pager_title"
        style="@style/StatsPagerTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stats_white_background"
        android:orientation="vertical">

        <org.wordpress.android.widgets.WPTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/text_sz_large"
            android:text="@string/stats_totals_followers_shares_header_content"
            android:textSize="@dimen/text_sz_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium">

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/stats_totals_followers_shares_posts_count"
                    style="@style/StatsHeaderTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0" />

                <org.wordpress.android.widgets.WPTextView
                    style="@style/StatsHeaderTotalsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/stats_totals_followers_shares_posts_count"
                    android:drawableLeft="@drawable/stats_icon_posts"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@string/stats_totals_followers_shares_label_posts" />
            </RelativeLayout>

            <include layout="@layout/stats_vertical_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium">

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/stats_totals_followers_shares_categories_count"
                    style="@style/StatsHeaderTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0" />

                <org.wordpress.android.widgets.WPTextView
                    style="@style/StatsHeaderTotalsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/stats_totals_followers_shares_categories_count"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/stats_icon_categories"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@string/stats_totals_followers_shares_label_categories" />
            </RelativeLayout>

            <include layout="@layout/stats_vertical_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium">

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/stats_totals_followers_shares_tags_count"
                    style="@style/StatsHeaderTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0" />

                <org.wordpress.android.widgets.WPTextView
                    style="@style/StatsHeaderTotalsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/stats_totals_followers_shares_tags_count"
                    android:drawableLeft="@drawable/stats_icon_tags"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@string/stats_totals_followers_shares_label_tags" />
            </RelativeLayout>
        </LinearLayout>

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/stats_totals_followers_shares_header_followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_extra_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/margin_medium">

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/stats_totals_followers_shares_followers_count"
                    style="@style/StatsHeaderTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0" />

                <org.wordpress.android.widgets.WPTextView
                    style="@style/StatsHeaderTotalsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/stats_totals_followers_shares_followers_count"
                    android:drawableLeft="@drawable/stats_icon_plus"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@string/stats_totals_followers_shares_label_blog" />
            </RelativeLayout>

            <include layout="@layout/stats_vertical_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_medium">

                <org.wordpress.android.widgets.WPTextView
                    android:id="@+id/stats_totals_followers_shares_comments_count"
                    style="@style/StatsHeaderTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0" />

                <org.wordpress.android.widgets.WPTextView
                    style="@style/StatsHeaderTotalsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/stats_totals_followers_shares_comments_count"
                    android:drawableLeft="@drawable/stats_icon_plus"
                    android:drawablePadding="@dimen/margin_medium"
                    android:text="@string/stats_totals_followers_shares_label_comments" />
            </RelativeLayout>
        </LinearLayout>

        <org.wordpress.android.widgets.WPTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:text="@string/stats_totals_followers_shares_header_shares"
            android:textSize="@dimen/text_sz_large" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium">

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/stats_totals_followers_shares_shares_count"
                style="@style/StatsHeaderTotals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="0" />

            <org.wordpress.android.widgets.WPTextView
                style="@style/StatsHeaderTotalsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/stats_totals_followers_shares_shares_count"
                android:text="@string/stats_totals_followers_shares_label_shares" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>