<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="?attr/dialogPreferredPadding">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/Widget.LoginFlow.TextInputLayout">

        <!-- use singleLine (even if deprecated) to have a scrolling single line. -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_http_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/httpuser"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_large"
        app:passwordToggleEnabled="true"
        app:theme="@style/Widget.LoginFlow.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_http_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/httppassword"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
