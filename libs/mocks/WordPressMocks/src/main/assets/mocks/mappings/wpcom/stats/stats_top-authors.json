{
    "request": {
        "method": "GET",
        "urlPattern": "/rest/v1.1/sites/.*/stats/top-authors/"
    },
    "response": {
        "status": 200,
        "jsonBody": {
            "date": "{{now format='yyyy-MM-dd'}}",
            "days": {
                "{{now format='yyyy-MM-dd'}}": {
                    "authors": []
                }
            },
            "period": "day"
        },
        "headers": {
            "Content-Type": "application/json",
            "Connection": "keep-alive",
            "Cache-Control": "no-cache, must-revalidate, max-age=0"
        }
    }
}
