	],
)

android_library(
	name = 'src_debug',
	srcs = glob([
		'src/main/java/**/*.java',
	]),
	manifest = 'build/okbuck/debug/AndroidManifest.xml',
	source = '7',
	target = '7',
	deps = [
		'//.okbuck/cache:com.android.support.animated-vector-drawable-25.1.1.aar',
		'//.okbuck/cache:com.android.support.appcompat-v7-25.1.1.aar',
		'//.okbuck/cache:com.android.support.design-25.1.1.aar',
		'//.okbuck/cache:com.android.support.recyclerview-v7-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-annotations-25.1.1.jar',
		'//.okbuck/cache:com.android.support.support-compat-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-core-ui-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-core-utils-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-fragment-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-media-compat-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-v13-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-v4-25.1.1.aar',
		'//.okbuck/cache:com.android.support.support-vector-drawable-25.1.1.aar',
		'//.okbuck/cache:com.android.support.transition-25.1.1.aar',
		'//.okbuck/cache:com.github.wordpress-mobile.WordPress-Aztec-Android.aztec-v0.5.0-alpha.3.aar',
		'//.okbuck/cache:com.mcxiaoke.volley.library-1.0.18.jar',
		'//.okbuck/cache:commons-lang.commons-lang-2.6.jar',
		'//.okbuck/cache:org.ccil.cowan.tagsoup.tagsoup-1.2.1.jar',
		'//.okbuck/cache:org.jetbrains.kotlin.kotlin-runtime-1.0.6.jar',
		'//.okbuck/cache:org.jetbrains.kotlin.kotlin-stdlib-1.0.6.jar',
		'//.okbuck/cache:org.jsoup.jsoup-1.9.2.jar',
		'//.okbuck/cache:org.wordpress.utils-1.14.1.aar',
		':build_config_debug',
		':res_debug',
	],
	visibility = [
		'PUBLIC',
	],
)

genrule(
	name = 'lint_debug',
	srcs = [
		'src/main/java',
		'src/main/res',
		'build/okbuck/debug',
	],
	out = 'lint_debug_out',
	bash = '' \
	'mkdir -p $OUT; ' \
	'exec java ' \
	'-Djava.awt.headless=true ' \
	'-Xmx1024m ' \
	'-classpath $(location //.okbuck/cache/lint:okbuck_lint) ' \
	'com.android.tools.lint.Main ' \
	'--classpath $(location :src_debug) ' \
	'--exitcode ' \
	'--fullpath ' \
	'--xml "$OUT/lint-results.xml" ' \
	'--html "$OUT/lint-results.html" ' \
	'--sources src/main/java ' \
	'--resources src/main/res ' \
	'build/okbuck/debug ' \
	'',
)

