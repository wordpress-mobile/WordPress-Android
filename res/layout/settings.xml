<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:background="#FFF5F5F5">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:padding="10dip"
				android:background="#FFF5F5F5">
        <RelativeLayout android:layout_width="fill_parent" 
                android:layout_height="fill_parent"
                android:background="@drawable/content_bg"
                android:id="@+id/section1"> 
     <TextView android:id="@+id/l_section1" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:text="@string/account_details"
              style="@style/WordPressSectionHeader"/>        
      <TextView android:id="@+id/l_username"  
      			android:textColor="#444444"
      			android:layout_below="@id/l_section1"
        	  android:layout_marginTop="10dip"	
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="@string/username"/>
              
    <EditText android:id="@+id/username" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:minHeight="40dip" 
              android:singleLine="true"
              android:background="@android:drawable/editbox_background"
              android:layout_below="@id/l_username"/>           
  
      <TextView android:id="@+id/l_password"
      android:textColor="#444444"
              android:layout_marginTop="10dip" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:layout_below="@id/username" android:text="@string/password"/>
              
    <EditText android:id="@+id/password" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:minHeight="40dip" 
              android:singleLine="true"
              android:password="true"
              android:background="@android:drawable/editbox_background"
              android:layout_below="@id/l_password"/>
</RelativeLayout>
<RelativeLayout android:layout_width="fill_parent" 
                android:layout_height="fill_parent"
                android:background="@drawable/content_bg"
                android:id="@+id/section2"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_below="@id/section1"> 
     <TextView android:id="@+id/l_section2" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:text="@string/media"
              style="@style/WordPressSectionHeader"/>
      <TextView android:id="@+id/l_imagePlacement"
      android:textColor="#444444"
        		android:layout_marginTop="10dip" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:layout_below="@id/l_section2" android:text="@string/place_image"/>
              
        <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/aboveText"
        android:id="@+id/imagePlacement"
        android:layout_below="@id/l_imagePlacement">
        <RadioButton
            android:id="@+id/aboveText"
            android:text="@string/above_text"/>
        <RadioButton
            android:id="@+id/belowText" android:text="@string/below_text"/>
    </RadioGroup>        
    
    <TextView android:id="@+id/l_maxImageWidth"
    android:textColor="#444444" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:layout_below="@id/imagePlacement" android:text="@string/max_thumbnail_px_width"/>
              
     <Spinner android:id="@+id/maxImageWidth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wp_spinner_bg"
   android:layout_below="@id/l_maxImageWidth"/>
              
<CheckBox android:id="@+id/centerThumbnail"
			android:text="@string/align_thumb_to_center"
     		android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_below="@id/maxImageWidth"
            android:layout_marginRight="2dip"
            />
              
<CheckBox android:id="@+id/fullSizeImage"
			android:textColor="#444444"
			android:text="@string/upload_full_size_image"
     		android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_below="@id/centerThumbnail"
            android:layout_marginRight="2dip"
            /> 
  </RelativeLayout>
  <RelativeLayout android:layout_width="fill_parent" 
                android:layout_height="fill_parent"
                android:background="@drawable/content_bg"
                android:id="@+id/section3"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_below="@id/section2"> 
     <TextView android:id="@+id/l_section3" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:text="@string/location"
              style="@style/WordPressSectionHeader"/>
	<CheckBox android:id="@+id/location"
			android:text="@string/geotag"
			android:textColor="#444444"
     		android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_below="@id/l_section3"
            android:layout_marginRight="2dip"
            /> 
</RelativeLayout>
<Button
			android:id="@+id/save"
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_below="@id/section3"
            android:layout_alignParentRight="true"
            android:background="@drawable/wp_button_small"
            android:layout_marginLeft="10dip" android:text="@string/save"/>
 
<Button
			android:id="@+id/cancel"
     		android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/save"
            android:background="@drawable/wp_button_small"
            android:layout_toLeftOf="@id/save" android:text="@string/cancel"/>
 
</RelativeLayout>
</ScrollView>