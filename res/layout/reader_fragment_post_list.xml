<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- blog mshot when showing posts in a specific blog -->
    <org.wordpress.android.widgets.WPNetworkImageView
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reader_header_image_height"
        android:scaleType="matrix"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/reader_list_margin"
        android:layout_marginRight="@dimen/reader_list_margin" />

    <!-- header when previewing posts with a specific tag -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_tag_preview_header"
        android:layout_marginLeft="@dimen/reader_list_margin"
        android:layout_marginRight="@dimen/reader_list_margin"
        layout="@layout/reader_tag_preview_header" />

    <uk.co.senab.actionbarpulltorefresh.extras.actionbarsherlock.PullToRefreshLayout
        android:id="@+id/ptr_layout"
        android:layout_below="@+id/layout_tag_preview_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.wordpress.android.widgets.WPListView
            android:id="@android:id/list"
            style="@style/ReaderListView.PostList"
            android:paddingLeft="@dimen/reader_list_margin"
            android:paddingRight="@dimen/reader_list_margin"
            android:divider="@color/reader_divider_grey"
            android:dividerHeight="@dimen/margin_large"
            tools:listitem="@layout/reader_listitem_post_excerpt" />

        <include
            android:id="@+id/empty_view"
            layout="@layout/reader_empty_view" />
    </uk.co.senab.actionbarpulltorefresh.extras.actionbarsherlock.PullToRefreshLayout>

    <org.wordpress.android.widgets.WPTextView
        android:id="@+id/text_new_posts"
        style="@style/ReaderTextView.MessageBar"
        android:text="@string/reader_label_new_posts"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_footer"
        style="@style/ReaderProgressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_large" />

</RelativeLayout>