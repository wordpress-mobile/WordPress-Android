<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
    	android:layout_marginLeft="16dp"
    	android:layout_marginRight="16dp" >

        <ImageView
            android:id="@+id/nux_fragment_icon"
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:src="@drawable/nux_icon_check_white" />

        <org.wordpress.android.widgets.WPTextView
            android:id="@+id/nux_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="@string/nux_tutorial_get_started_title"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            android:shadowColor="@color/nux_shadow"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:fontVariation="light" />
    </LinearLayout>

    <org.wordpress.android.widgets.WPTextView
            android:id="@+id/nux_fragment_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="28dp"
            android:text="@string/nux_tap_continue"
            android:textColor="#78bad8"
            android:textSize="14sp"
            android:shadowColor="@color/nux_shadow"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />

</LinearLayout>