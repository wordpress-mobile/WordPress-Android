<ScrollView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/home_gradient"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_gravity="center">
    <ImageView
      android:scaleType="centerInside"
      android:layout_width="246dip"
      android:layout_height="246dip"
      android:layout_marginTop="12dip"
      android:id="@+id/wordpress_logo"
      android:src="@drawable/new_account_logo">
    </ImageView>
    <TextView
      android:id="@+id/welcome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:typeface="serif"
      android:paddingRight="20dip"
      android:paddingLeft="20dip"
      android:maxLines="2"
      android:ellipsize="end"
      android:gravity="center"
      android:text="@string/tagline"
      android:layout_marginTop="12dip"
      android:layout_marginBottom="20dip"
      android:shadowColor="#FFFFFFFF"
      android:shadowDx="0"
      android:shadowDy="2"
      android:shadowRadius="1"
      android:textSize="20dip" />
    <Button
      android:id="@+id/createWPAccount"
      android:layout_width="280dip"
      android:layout_height="wrap_content"
      android:textSize="14dip"
      android:shadowColor="#FFFFFFFF"
      android:shadowDx="0"
      android:shadowDy="2"
      android:shadowRadius="1"
      android:singleLine="true"
      android:textStyle="bold"
      android:background="@drawable/wp_button"
      android:text="@string/new_to_wp" />
    <Button
      android:id="@+id/dotcomExisting"
      android:layout_width="280dip"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:textSize="14dip"
      android:shadowColor="#FFFFFFFF"
      android:shadowDx="0"
      android:shadowDy="2"
      android:shadowRadius="1"
      android:textStyle="bold"
      android:background="@drawable/wp_button"
      android:text="@string/i_have_wp_blog" />
    <Button
      android:id="@+id/dotorgExisting"
      android:layout_width="280dip"
      android:layout_height="wrap_content"
      android:textSize="14dip"
      android:singleLine="true"
      android:shadowColor="#FFFFFFFF"
      android:shadowDx="0"
      android:shadowDy="2"
      android:layout_marginBottom="8dip"
      android:shadowRadius="1"
      android:textStyle="bold"
      android:background="@drawable/wp_button"
      android:text="@string/i_have_blog" />
  </LinearLayout>
</ScrollView>
