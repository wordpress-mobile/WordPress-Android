{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "enabled": false,
      "packagePatterns": [
        "*"
      ]
    },
    {
      "enabled": true,
      "matchDepPatterns": [
        "automattic"
      ],
      "separateMajorMinor": false
    },
    {
      "enabled": true,
      "enabledManagers": [
        "gradle"
      ],
      "matchDepPatterns": [
        "automattic"
      ],
      "separateMajorMinor": false,
      "versioning": "semver-coerced"
    }
  ]
}
